<h1>User Details</h1>
<h3>Name: <%= @user.name %></h3>

<h3>Created Events:</h3>
<ul>
    <% @user.created_events.each do |event| %>
        <li><%= event.name %> on <%= event.date %></li>
    <% end %>
</ul>

<h3>Attending Events:</h3>
<ul>
    <% @user.attended_events.each do |event| %>
        <li><%= event.name %></li>
    <% end %>
</ul>
<h1>User Details</h1>
<h3>Name: <%= @user.name %></h3>

<h3>Created Events:</h3>
<ul>
    <% @user.created_events.each do |event| %>
        <li><%= link_to event.name, event %> on <%= event.date %></li>
    <% end %>
</ul>

<h3>Attending Events:</h3>
<h4>Previous Events:</h4>
<ul>
    <% @user.attended_events.where("date < ?", Time.now.strftime("%Y-%m-%d")).each do |event| %>
        <li><%= link_to event.name, event %> on <%= event.date %></li>
    <% end %>
</ul>
<h4>Upcoming Events:</h4>
<ul>
    <% @user.attended_events.where("date > ?", Time.now.strftime("%Y-%m-%d")).each do |event| %>
        <li><%= link_to event.name, event %> on <%= event.date %></li>
    <% end %>
</ul>